<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/informback"
    tools:context=".albumPage2">

    <ImageButton
        android:id="@+id/btn_flower"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="83dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="142dp"
        android:layout_weight="0"
        android:adjustViewBounds="true"
        android:backgroundTint="#FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_mychild"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_fruit"
        app:srcCompat="@drawable/flower" />

    <ImageButton
        android:id="@+id/btn_plant"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="63dp"
        android:adjustViewBounds="true"
        android:backgroundTint="#FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/btn_mychild"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_fruit"
        app:layout_constraintTop_toBottomOf="@+id/btn_every"
        app:srcCompat="@drawable/plant" />

    <ImageButton
        android:id="@+id/btn_every"
        android:layout_width="246dp"
        android:layout_height="115dp"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="43dp"
        android:adjustViewBounds="true"
        android:backgroundTint="#FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/btn_plant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.581"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/everyone" />

    <ImageButton
        android:id="@+id/btn_fruit"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="345dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="63dp"
        android:adjustViewBounds="true"
        android:backgroundTint="#FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/btn_flower"
        app:layout_constraintEnd_toStartOf="@+id/btn_plant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fruit" />

    <ImageButton
        android:id="@+id/btn_mychild"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="142dp"
        android:adjustViewBounds="true"
        android:backgroundTint="#FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_flower"
        app:layout_constraintTop_toBottomOf="@+id/btn_plant"
        app:srcCompat="@drawable/mychildren" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="애든원 친구들"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btn_every"
        app:layout_constraintStart_toStartOf="@+id/btn_every"
        app:layout_constraintTop_toBottomOf="@+id/btn_every" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="열매반"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btn_fruit"
        app:layout_constraintStart_toStartOf="@+id/btn_fruit"
        app:layout_constraintTop_toBottomOf="@+id/btn_fruit" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="새싹반"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btn_plant"
        app:layout_constraintStart_toStartOf="@+id/btn_plant"
        app:layout_constraintTop_toBottomOf="@+id/btn_plant" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="꽃잎반"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btn_flower"
        app:layout_constraintStart_toStartOf="@+id/btn_flower"
        app:layout_constraintTop_toBottomOf="@+id/btn_flower" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="내아이"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btn_mychild"
        app:layout_constraintStart_toStartOf="@+id/btn_mychild"
        app:layout_constraintTop_toBottomOf="@+id/btn_mychild" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:layout_marginBottom="50dp"
        android:text="우리 아이들의 소중한 추억을 구경해요💗"
        android:textColor="#0B0909"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_every"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>