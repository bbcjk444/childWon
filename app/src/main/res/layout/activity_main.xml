<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/informback"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/menu_album"

        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"


        android:layout_marginTop="240dp"
        android:padding="0sp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/menu_cal"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/picture" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="커뮤니케이션"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/menu_comu"
        app:layout_constraintStart_toStartOf="@+id/menu_comu"
        app:layout_constraintTop_toBottomOf="@+id/menu_comu" />

    <ImageButton
        android:id="@+id/menu_bus"

        android:layout_width="55dp"
        android:layout_height="55dp"


        android:layout_marginStart="24dp"
        android:layout_marginTop="240dp"
        android:padding="0sp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/menu_comu"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/menu_alarm"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bus" />

    <ImageButton
        android:id="@+id/menu_cal"

        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"


        android:layout_marginTop="240dp"
        android:padding="0sp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/menu_alarm"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/menu_album"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/schedule" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="앨범"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/menu_album"
        app:layout_constraintStart_toStartOf="@+id/menu_album"
        app:layout_constraintTop_toBottomOf="@+id/menu_album" />

    <ImageButton
        android:id="@+id/menu_comu"

        android:layout_width="55dp"
        android:layout_height="55dp"


        android:layout_marginStart="28dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="16dp"
        android:padding="0sp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/menu_bus"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/commu" />

    <ImageButton
        android:id="@+id/menu_alarm"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="240dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/menu_bus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/menu_cal"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/images" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="버스 알리미"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/menu_bus"
        app:layout_constraintStart_toStartOf="@+id/menu_bus"
        app:layout_constraintTop_toBottomOf="@+id/menu_bus" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="일정표"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/menu_cal"
        app:layout_constraintStart_toStartOf="@+id/menu_cal"
        app:layout_constraintTop_toBottomOf="@+id/menu_cal" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="알림내역"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/menu_alarm"
        app:layout_constraintStart_toStartOf="@+id/menu_alarm"
        app:layout_constraintTop_toBottomOf="@+id/menu_alarm" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:backgroundTint="#A9CFED"
        android:text="로그아웃"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>