<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/informback"
    tools:context=".joinPage">


    <TextView
        android:id="@+id/menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="135dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="135dp"
        android:background="@android:drawable/menuitem_background"
        android:ellipsize="end"
        android:gravity="center"
        android:text="학부모 회원가입"
        android:textColor="#0B0A0A"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/p_join_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/p_join_pwc"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/border"
        android:ellipsize="end"
        android:ems="10"
        android:hint="Password check"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColorHint="#888888"
        app:layout_constraintBottom_toTopOf="@+id/p_join_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p_join_pw" />

    <EditText
        android:id="@+id/p_join_name"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/border"
        android:ellipsize="end"
        android:ems="10"
        android:hint="이름"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColorHint="#888888"
        app:layout_constraintBottom_toTopOf="@+id/p_join_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_name" />

    <EditText
        android:id="@+id/p_join_phone2"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/border"
        android:ellipsize="end"
        android:ems="10"
        android:hint="비상연락망"
        android:inputType="phone"
        android:paddingLeft="10dp"
        android:textColorHint="#888888"
        app:layout_constraintBottom_toTopOf="@+id/p_join_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p_join_phone" />

    <EditText
        android:id="@+id/p_join_image"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/border"
        android:ellipsize="end"
        android:ems="10"
        android:hint="사진 업로드"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColorHint="#888888"
        app:layout_constraintBottom_toTopOf="@+id/p_join_ok"
        app:layout_constraintEnd_toStartOf="@+id/p_join_imgupload"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p_join_phone2" />


    <EditText
        android:id="@+id/p_join_add"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/border"
        android:ellipsize="end"
        android:ems="10"
        android:hint="주소"
        android:inputType="textPostalAddress"
        android:paddingLeft="10dp"
        android:textColorHint="#888888"
        app:layout_constraintBottom_toTopOf="@+id/p_join_phone"
        app:layout_constraintEnd_toStartOf="@+id/p_join_addfind"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p_join_pwc" />

    <EditText
        android:id="@+id/p_join_id"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/border"
        android:ellipsize="end"
        android:ems="10"
        android:hint="ID"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColorHint="#888888"
        app:layout_constraintBottom_toTopOf="@+id/p_join_pw"
        app:layout_constraintEnd_toStartOf="@+id/p_join_idcheck"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p_join_name" />

    <EditText
        android:id="@+id/p_join_pw"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/border"
        android:ellipsize="end"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColorHint="#888888"
        app:layout_constraintBottom_toTopOf="@+id/p_join_pwc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p_join_id" />

    <Button
        android:id="@+id/p_join_imgupload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#A9CFED"
        android:text="업로드"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/p_join_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/p_join_image"
        app:layout_constraintTop_toTopOf="@+id/p_join_image" />

    <Button
        android:id="@+id/p_join_addfind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:backgroundTint="#A9CFED"
        android:text="찾기"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/p_join_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/p_join_add"
        app:layout_constraintTop_toTopOf="@+id/p_join_add" />

    <EditText
        android:id="@+id/p_join_phone"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/border"
        android:ellipsize="end"
        android:ems="10"
        android:hint="전화번호"
        android:inputType="phone"
        android:paddingLeft="10dp"
        android:textColorHint="#888888"
        app:layout_constraintBottom_toTopOf="@+id/p_join_phone2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p_join_add" />

    <Button
        android:id="@+id/p_join_idcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#A9CFED"
        android:text="중복확인"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/p_join_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/p_join_id"
        app:layout_constraintTop_toTopOf="@+id/p_join_id" />

    <Button
        android:id="@+id/p_join_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="#A9CFED"
        android:gravity="center"
        android:text="확인"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/p_join_cancel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p_join_image" />


    <Button
        android:id="@+id/p_join_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#A9CFED"
        android:gravity="center"
        android:text="취소"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/p_join_ok"
        app:layout_constraintTop_toBottomOf="@+id/p_join_image" />
</androidx.constraintlayout.widget.ConstraintLayout>